<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_all_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checked="true"
        android:text="@string/settings_all_notif"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/switch_all_notif">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pink" />

        <TextView
            android:id="@+id/text_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/settings_time_label"
            android:textColor="@color/dark_grey" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="16dp"
            android:text="@string/settings_time"
            android:textColor="@color/dark_grey"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/pink" />

    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_month_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checked="true"
        android:text="@string/settings_month_notif"
        app:layout_constraintTop_toBottomOf="@id/layout_time" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_week_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checked="true"
        android:text="@string/settings_week_notif"
        app:layout_constraintTop_toBottomOf="@id/switch_month_notif" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_two_day_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/settings_two_day_notif"
        app:layout_constraintTop_toBottomOf="@id/switch_week_notif" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_day_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/settings_day_notif"
        app:layout_constraintTop_toBottomOf="@id/switch_two_day_notif" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_today_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checked="true"
        android:text="@string/settings_today_notif"
        app:layout_constraintTop_toBottomOf="@id/switch_day_notif" />

</androidx.constraintlayout.widget.ConstraintLayout>