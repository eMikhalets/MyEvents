<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_all_notif"
            style="@style/Text.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_small"
            android:paddingEnd="@dimen/space_small"
            android:text="@string/settings_notifications_all"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/switch_all_notif">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pink" />

            <TextView
                android:id="@+id/text_time_label"
                style="@style/Text.Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_small"
                android:layout_marginTop="@dimen/space_small"
                android:layout_marginEnd="@dimen/space_small"
                android:text="@string/settings_notifications_time" />

            <TextView
                android:id="@+id/text_time"
                style="@style/Text.Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_small"
                android:layout_marginEnd="@dimen/space_small"
                android:paddingStart="@dimen/space_normal"
                android:text="@string/settings_notifications_time_value"
                tools:ignore="RtlSymmetry" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_small"
                android:background="@color/pink" />

        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_month_notif"
            style="@style/Text.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_small"
            android:paddingEnd="@dimen/space_small"
            android:text="@string/settings_notifications_month"
            app:layout_constraintTop_toBottomOf="@id/layout_time" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_week_notif"
            style="@style/Text.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_small"
            android:paddingEnd="@dimen/space_small"
            android:text="@string/settings_notifications_week"
            app:layout_constraintTop_toBottomOf="@id/switch_month_notif" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_two_day_notif"
            style="@style/Text.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_small"
            android:paddingEnd="@dimen/space_small"
            android:text="@string/settings_notifications_two_day"
            app:layout_constraintTop_toBottomOf="@id/switch_week_notif" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_day_notif"
            style="@style/Text.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_small"
            android:paddingEnd="@dimen/space_small"
            android:text="@string/settings_notifications_day"
            app:layout_constraintTop_toBottomOf="@id/switch_two_day_notif" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_today_notif"
            style="@style/Text.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_small"
            android:paddingEnd="@dimen/space_small"
            android:text="@string/settings_notifications_today"
            app:layout_constraintTop_toBottomOf="@id/switch_day_notif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pink" />

        <TextView
            android:id="@+id/text_restart_alarm_manager"
            style="@style/Text.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="@dimen/space_small"
            android:paddingTop="@dimen/space_normal"
            android:paddingEnd="@dimen/space_small"
            android:paddingBottom="@dimen/space_normal"
            android:text="@string/settings_restart_notifications" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pink" />

        <TextView
            android:id="@+id/text_import_events"
            style="@style/Text.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="@dimen/space_small"
            android:paddingTop="@dimen/space_normal"
            android:paddingEnd="@dimen/space_small"
            android:paddingBottom="@dimen/space_normal"
            android:text="@string/settings_backup_import" />

        <TextView
            android:id="@+id/text_export_events"
            style="@style/Text.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="@dimen/space_small"
            android:paddingTop="@dimen/space_normal"
            android:paddingEnd="@dimen/space_small"
            android:paddingBottom="@dimen/space_normal"
            android:text="@string/settings_backup_export" />

    </LinearLayout>

</ScrollView>