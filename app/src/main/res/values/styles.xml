<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- General -->

    <style name="Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/jacksons_purple</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/TextTopBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="BottomBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">@dimen/icon_size_bottom_bar</item>
        <item name="backgroundTint">@color/jacksons_purple</item>
        <item name="itemIconTint">@color/grey</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/space_small</item>
    </style>

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Text -->

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/eclipse</item>
    </style>

    <style name="TextTopBar" parent="Text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="TextTitle" parent="Text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextPrimary" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button -->

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/jacksons_purple</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/eclipse</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ButtonFloating" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/jacksons_purple</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="fabCustomSize">50dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonFloating</item>
        <item name="maxImageSize">36dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <!-- Text Fields -->

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/eclipse</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="drawableTint">@color/grey</item>
    </style>

    <!-- Other -->

    <style name="Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/eclipse</item>
        <item name="android:buttonTint">@color/jacksons_purple</item>
    </style>
</resources>