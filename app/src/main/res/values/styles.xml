<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- General -->

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Toolbar_Base" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextTopBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="Toolbar_Light" parent="Toolbar_Base">
        <item name="android:background">@color/jacksons_purple</item>
        <item name="titleTextColor">@color/white</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="Toolbar_Dark" parent="Toolbar_Base">
        <item name="android:background">@color/charcoal</item>
        <item name="titleTextColor">@color/whisper</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="BottomBar_Base" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">@dimen/icon_size_bottom_bar</item>
    </style>

    <style name="BottomBar_Light" parent="BottomBar_Base">
        <item name="backgroundTint">@color/jacksons_purple</item>
        <item name="itemIconTint">@color/selector_bottom_bar_icon_light</item>
    </style>

    <style name="BottomBar_Dark" parent="BottomBar_Base">
        <item name="backgroundTint">@color/charcoal</item>
        <item name="itemIconTint">@color/selector_bottom_bar_icon_dark</item>
    </style>

    <style name="Dialog_Base" parent="Theme.AppCompat">
        <item name="android:padding">@dimen/space_small</item>
    </style>

    <style name="Dialog_Light" parent="Dialog_Base">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Dialog_Dark" parent="Dialog_Base">
        <item name="android:background">@color/charcoal</item>
    </style>

    <style name="Card_Base" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Card_Light" parent="Card_Base">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Card_Dark" parent="Card_Base">
        <item name="cardBackgroundColor">@color/charcoal</item>
    </style>

    <style name="Calendar_Light">
        <item name="headerColor">@color/jacksons_purple</item>
        <item name="selectionColor">@color/jacksons_purple</item>
        <item name="pagesColor">@color/white</item>
        <item name="abbreviationsBarColor">@color/white</item>
    </style>

    <style name="Calendar_Dark">
        <item name="headerColor">@color/charcoal</item>
        <item name="selectionColor">@color/charcoal</item>
        <item name="pagesColor">@color/grey</item>
        <item name="abbreviationsBarColor">@color/grey</item>
    </style>

    <!-- Text -->

    <style name="Text_Light" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/eclipse</item>
    </style>

    <style name="Text_Dark" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/whisper</item>
    </style>

    <style name="TextTopBar">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="TextTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button -->

    <style name="Button_Base" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Button_Light" parent="Button_Base">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/jacksons_purple</item>
    </style>

    <style name="Button_Dark" parent="Button_Base">
        <item name="android:textColor">@color/taupe</item>
        <item name="android:backgroundTint">@color/peach_orange</item>
    </style>

    <style name="TextButton_Base" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="TextButton_Light" parent="TextButton_Base">
        <item name="android:textColor">@color/eclipse</item>
    </style>

    <style name="TextButton_Dark" parent="TextButton_Base">
        <item name="android:textColor">@color/whisper</item>
    </style>

    <style name="ButtonFloating_Base" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="fabCustomSize">50dp</item>
        <item name="maxImageSize">36dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="ButtonFloating_Light" parent="ButtonFloating_Base">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/jacksons_purple</item>
        <item name="shapeAppearanceOverlay">@style/ButtonFloating_Light</item>
    </style>

    <style name="ButtonFloating_Dark" parent="ButtonFloating_Base">
        <item name="android:backgroundTint">@color/peach_orange</item>
        <item name="tint">@color/taupe</item>
        <item name="shapeAppearanceOverlay">@style/ButtonFloating_Dark</item>
    </style>

    <!-- Text Fields -->

    <style name="InputLayout_Base" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="InputLayout_Light" parent="InputLayout_Base">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="InputLayout_Dark" parent="InputLayout_Base">
        <item name="boxBackgroundColor">@color/charcoal</item>
    </style>

    <style name="Input_Base" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="drawableTint">@color/grey</item>
    </style>

    <style name="Input_Light" parent="Input_Base">
        <item name="android:textColor">@color/eclipse</item>
    </style>

    <style name="Input_Dark" parent="Input_Base">
        <item name="android:textColor">@color/whisper</item>
    </style>

    <!-- Other -->

    <style name="Checkbox_Base" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Checkbox_Light" parent="Checkbox_Base">
        <item name="android:textColor">@color/eclipse</item>
        <item name="android:buttonTint">@color/jacksons_purple</item>
    </style>

    <style name="Checkbox_Dark" parent="Checkbox_Base">
        <item name="android:textColor">@color/whisper</item>
        <item name="buttonTint">@color/peach_orange</item>
    </style>
</resources>