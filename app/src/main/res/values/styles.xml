<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="background">@color/lighter_blue</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Text" />

    <style name="Text.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Text.Primary" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Secondary" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Highlighted" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Settings" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>


    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Button.Neutral" parent="Button">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Button.Positive" parent="Button">
        <item name="android:textColor">@color/orange</item>
        <item name="iconTint">@color/orange</item>
    </style>

    <style name="Button.Negative" parent="Button">
        <item name="android:textColor">@color/pink</item>
        <item name="iconTint">@color/pink</item>
    </style>


    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/back_edit_text</item>
        <item name="android:ems">20</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">20</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Input.Notes" parent="Input">
        <item name="android:gravity">start</item>
        <item name="android:inputType">textCapWords|textMultiLine</item>
    </style>

    <style name="Input.Date" parent="Input">
        <item name="android:drawableEnd">@drawable/ic_calendar</item>
        <item name="drawableTint">@color/grey</item>
        <item name="android:ems">11</item>
        <item name="android:inputType">date</item>
    </style>
</resources>