<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav"
    app:startDestination="@id/bottom_home">

    <fragment
        android:id="@+id/bottom_home"
        android:name="com.emikhalets.mydates.ui.dates_list.DatesListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_dates_list" >
        <action
            android:id="@+id/action_home_to_dateDetails"
            app:destination="@id/dateDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/dateDetailsFragment"
        android:name="com.emikhalets.mydates.ui.date_details.DateDetailsFragment"
        android:label="@string/title_date_details"
        tools:layout="@layout/fragment_date_details" >
        <argument
            android:name="dateItem"
            app:argType="com.emikhalets.mydates.data.GroupDateItem" />
    </fragment>
</navigation>